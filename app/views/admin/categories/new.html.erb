<h2>New Category</h2>

<%= form_for [:admin, @category], html: { class: 'form-horizontal' } do |f| %>
  <% if @category.errors.any? %>
    <div class="errorExplanation">
      <h2>
        <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :name, required: true %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag "Upload Map", class: [:btn, 'btn-primary', :upload_spinner],
        data: { upload_text: 'Uploading Map' } %>
    </div>
  </div>
<% end %>