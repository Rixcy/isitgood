<%= form_for @movie, html: { class: 'form-horizontal' } do |f| %>
  <% if @movie.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Movie Name", class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :release_date, "Release Date", class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.date_select :release_date,
        order: [:day, :month, :year],
        default: Date.today,
        class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', rows: 10, required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: [:btn, 'btn-primary'] %>
    </div>
  </div>
<% end %>
